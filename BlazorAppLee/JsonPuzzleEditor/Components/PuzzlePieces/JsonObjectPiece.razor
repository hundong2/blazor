@using BlazorAppLee.JsonPuzzleEditor.Models
@inherits PuzzlePieceBase

<div class="piece-content">
    <div class="piece-icon">&#123;&#125;</div>
    <div class="piece-label">Object</div>
    @if (ObjectPiece.PropertyIds.Any())
    {
        <div class="piece-info">@ObjectPiece.PropertyIds.Count properties</div>
    }
</div>

@code {
    [Parameter, EditorRequired] public Models.JsonObjectPiece ObjectPiece { get; set; } = null!;

    protected override void OnInitialized()
    {
        if (ObjectPiece != null)
        {
            Piece = ObjectPiece;
        }
        base.OnInitialized();
    }
}