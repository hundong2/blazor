<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Default Light Theme Colors -->
    <Color x:Key="Primary">#512BD4</Color> <!-- Default MAUI Primary -->
    <Color x:Key="Secondary">#DFD8F7</Color>
    <Color x:Key="Tertiary">#2B0B98</Color>

    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Gray100">#F2F2F2</Color>
    <Color x:Key="Gray200">#E6E6E6</Color>
    <Color x:Key="Gray300">#CCCCCC</Color>
    <Color x:Key="Gray400">#B3B3B3</Color>
    <Color x:Key="Gray500">#999999</Color>
    <Color x:Key="Gray600">#808080</Color>
    <Color x:Key="Gray900">#292929</Color>
    <Color x:Key="Gray950">#1C1C1C</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>
    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>

    <!-- Default Dark Theme Colors -->
    <Color x:Key="PrimaryDark">#6E49DD</Color>
    <Color x:Key="SecondaryDark">#4A3A75</Color>
    <Color x:Key="TertiaryDark">#967DEA</Color>

    <Color x:Key="WhiteDark">#E1E1E1</Color>
    <Color x:Key="BlackDark">#121212</Color>

    <Color x:Key="Gray100Dark">#3B3B3B</Color>
    <Color x:Key="Gray200Dark">#4A4A4A</Color>
    <Color x:Key="Gray300Dark">#5A5A5A</Color>
    <Color x:Key="Gray400Dark">#6A6A6A</Color>
    <Color x:Key="Gray500Dark">#7A7A7A</Color>
    <Color x:Key="Gray600Dark">#8A8A8A</Color>
    <Color x:Key="Gray900Dark">#E1E1E1</Color>
    <Color x:Key="Gray950Dark">#F0F0F0</Color>

    <Color x:Key="PageBackgroundColor">White</Color>
    <Color x:Key="PageBackgroundColorDark">#121212</Color>

</ResourceDictionary>
