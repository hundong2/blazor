<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DataInspector.Maui"
             xmlns:shared="clr-namespace:DataInspector.SharedComponents;assembly=DataInspector.SharedComponents"
             x:Class="DataInspector.Maui.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <BlazorWebView x:Name="blazorWebView" HostPage="wwwroot/index.html">
        <BlazorWebView.RootComponents>
            <!-- DataInspector.SharedComponents.App (App.razor)을 루트 컴포넌트로 지정 -->
            <RootComponent Selector="#app" ComponentType="{x:Type shared:App}" />
        </BlazorWebView.RootComponents>
    </BlazorWebView>

</ContentPage>
